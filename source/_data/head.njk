      // åˆ›å»ºè¯­è¨€åˆ‡æ¢å™¨å®¹å™¨
      const langSwitcher = document.createElement('div');
      langSwitcher.className = 'custom-language-switcher';
      langSwitcher.innerHTML = `
        <div class="current-lang">
          ${languages.find(lang => lang.code === currentLang).flag} ${languages.find(lang => lang.code === currentLang).name}
          <span class="arrow">â–¼</span>
        </div>
        <div class="lang-options">
          ${languages.map(lang => `
            <div class="lang-option ${lang.code === currentLang ? 'active' : ''}" data-lang="${lang.code}" data-google-code="${lang.googleCode}">
              ${lang.flag} ${lang.name}
            </div>
          `).join('')}
        </div>
      `;
      
      // æ·»åŠ æ ·å¼
      const style = document.createElement('style');
      style.innerHTML = `
        .custom-language-switcher {
          position: relative;
          margin-left: 10px;
