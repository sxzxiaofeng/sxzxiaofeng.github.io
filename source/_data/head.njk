        }
        
        /* å®Œå…¨éšè—Googleç¿»è¯‘é»˜è®¤çš„UI */
        .skiptranslate {
          display: none !important;
        }
        
        body {
          top: 0px !important;
        }
        
        .goog-te-gadget {
          font-size: 0 !important;
        }
        
        #google_translate_element {
          display: none;
        }
        
        .goog-te-gadget-simple {
          background-color: transparent !important;
          border: none !important;
        }
        
        .goog-te-gadget-simple .goog-te-menu-value span {
          display: none;
        }
        
        .goog-te-gadget-simple .goog-te-menu-value:hover {
          text-decoration: none;
        }
        
        /* éšè—Googleç¿»è¯‘å¼¹çª— */
        .goog-te-tooltip {
          display: none !important;
        }
        
        /* ç¿»è¯‘åçš„å†…å®¹æ ·å¼è°ƒæ•´ */
        .goog-te-highlight {
          background-color: transparent !important;
        }
        
        /* éšè—ç¿»è¯‘é€‰æ‹©å™¨ */
        .goog-te-gadget .goog-te-combo {
          display: none !important;
        }
        
        /* é˜²æ­¢ä»£ç å—è¢«ç¿»è¯‘ */
        figure.highlight.javascript, figure.highlight.javascript * {
          pointer-events: none !important;
        }
        
        figure.highlight.javascript {
          position: relative !important;
        }
      `;
      
      // æ·»åŠ åˆ°é¡µé¢
      document.head.appendChild(style);
      
      // æ·»åŠ äº‹ä»¶ç›‘å¬å™¨
      const langOptions = langSwitcher.querySelectorAll('.lang-option');
      
      langOptions.forEach(option => {
        option.addEventListener('click', function() {
          const selectedLang = this.getAttribute('data-google-code');
          changeLanguage(selectedLang);
          
          // æ›´æ–°æ´»åŠ¨çŠ¶æ€
          langOptions.forEach(opt => opt.classList.remove('active'));
          this.classList.add('active');
          
          // æ›´æ–°å½“å‰æ˜¾ç¤ºçš„è¯­è¨€
          const flag = this.getAttribute('data-flag') || 
                       languages.find(l => l.googleCode === selectedLang).flag;
          const name = languages.find(l => l.googleCode === selectedLang).name;
          langSwitcher.querySelector('.current-lang').innerHTML = `
            ${flag} ${name}<span class="arrow">â–¼</span>
          `;
        });
      });
      
      return langSwitcher;
    }
    
    // åˆ‡æ¢è¯­è¨€
    function changeLanguage(langCode) {
      // å¦‚æœåˆ‡æ¢åˆ°è‹±è¯­ï¼Œä¿æŠ¤ä»£ç å—ä¸è¢«ç¿»è¯‘
      if (langCode === 'en') {
        protectCodeBlocks();
      }
      
      // è®¾ç½®Googleç¿»è¯‘Cookie
      setCookie('googtrans', '/zh-CN/' + langCode, 365);
      
      // åˆ·æ–°é¡µé¢ä»¥åº”ç”¨ç¿»è¯‘
      window.location.reload();
    }
    
    // è·å–Cookie
    function getCookie(name) {
      const value = "; " + document.cookie;
      const parts = value.split("; " + name + "=");
      if (parts.length == 2) return parts.pop().split(";").shift();
      return null;
    }
    
    // è®¾ç½®Cookie
    function setCookie(name, value, days) {
      const date = new Date();
      date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
      const expires = "; expires=" + date.toGMTString();
      document.cookie = name + "=" + value + expires + "; path=/";
    }
    
    // å°è¯•æ·»åŠ è¯­è¨€åˆ‡æ¢å™¨åˆ°å¯¼èˆªæ 
    function addLangSwitcher() {
      const nav = document.querySelector('.nav') || 
                 document.querySelector('.menu') || 
                 document.querySelector('.header') ||
                 document.querySelector('.site-nav') ||
                 document.querySelector('.header-inner') ||
                 document.querySelector('.main-menu');
      
      if (nav) {
        // åˆ›å»ºè¯­è¨€åˆ‡æ¢å™¨
        const langSwitcher = createLanguageSwitcher();
        
        // æ·»åŠ åˆ°å¯¼èˆªæ 
        nav.appendChild(langSwitcher);
        
        // æ·»åŠ è¾¹ç¼˜æ£€æµ‹
        checkEdgePosition(langSwitcher);
        
        // ç›‘å¬çª—å£å¤§å°å˜åŒ–ï¼Œé‡æ–°æ£€æŸ¥è¾¹ç¼˜ä½ç½®
        window.addEventListener('resize', () => {
          checkEdgePosition(langSwitcher);
        });
      } else {
        // å¦‚æœæ‰¾ä¸åˆ°å¯¼èˆªæ ï¼Œå°è¯•åœ¨åŠ è½½åå†æ¬¡æ·»åŠ 
        setTimeout(addLangSwitcher, 1000);
      }
    }
    
    // æ£€æŸ¥è¯­è¨€åˆ‡æ¢å™¨æ˜¯å¦é è¿‘é¡µé¢è¾¹ç¼˜
    function checkEdgePosition(element) {
      // ç§»é™¤ä¹‹å‰çš„è¾¹ç¼˜ç±»
      element.classList.remove('edge-right');
      
      // è·å–å…ƒç´ ä½ç½®
      const rect = element.getBoundingClientRect();
      const optionsWidth = 150; // ä¼°ç®—ä¸‹æ‹‰èœå•å®½åº¦
      
      // æ£€æŸ¥æ˜¯å¦ä¼šè¶…å‡ºå³ä¾§è¾¹ç¼˜
      if (rect.right + optionsWidth > window.innerWidth) {
        element.classList.add('edge-right');
      }
    }
    
    // ä¿æŠ¤ä»£ç å—ä¸è¢«ç¿»è¯‘
    function protectCodeBlocks() {
      // æ‰¾åˆ°æ‰€æœ‰å¸¦æœ‰highlightç±»çš„figureå…ƒç´ 
      const codeBlocks = document.querySelectorAll('figure.highlight');
      
      // ä¸ºæ¯ä¸ªä»£ç å—æ·»åŠ notranslateç±»
      codeBlocks.forEach(block => {
        block.classList.add('notranslate');
        
        // ä¸ºæ‰€æœ‰å­å…ƒç´ ä¹Ÿæ·»åŠ notranslateç±»
        const children = block.querySelectorAll('*');
        children.forEach(child => {
          child.classList.add('notranslate');
        });
      });
    }
    
    // å½“DOMåŠ è½½å®Œæˆåå°è¯•æ·»åŠ è¯­è¨€åˆ‡æ¢å™¨
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        addLangSwitcher();
        protectCodeBlocks();
      });
    } else {
      addLangSwitcher();
      protectCodeBlocks();
    }
    
    // ç­‰å¾…Googleç¿»è¯‘åŠ è½½å®Œæˆ
    setTimeout(() => {
      // é¦–å…ˆä¿æŠ¤ä»£ç å—
      protectCodeBlocks();
      
      // æ£€æŸ¥æ˜¯å¦æœ‰ä¿å­˜çš„è¯­è¨€åå¥½
      const savedLang = getCookie('googtrans');
      if (savedLang && savedLang !== '/zh-CN/zh-CN') {
        // å¦‚æœæœ‰ä¿å­˜çš„è¯­è¨€åå¥½ä¸”ä¸æ˜¯ä¸­æ–‡ï¼Œåˆ™åº”ç”¨ç¿»è¯‘
        const targetLang = savedLang.split('/')[2];
        if (targetLang && targetLang !== 'zh-CN') {
          // è§¦å‘Googleç¿»è¯‘
          const selectElement = document.querySelector('.goog-te-combo');
          if (selectElement) {
            selectElement.value = targetLang;
            selectElement.dispatchEvent(new Event('change'));
            
            // ç¿»è¯‘åå†æ¬¡ä¿æŠ¤ä»£ç å—
            setTimeout(protectCodeBlocks, 1000);
          }
        }
      }
    }, 2000);
  })();
</script>